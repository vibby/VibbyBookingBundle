{% extends 'VibbyBookingBundle::adminbase.html.twig' %}

                 {% block parallax %}{% endblock %}

{% block panels %}

<h1>{% trans %}Event list{% endtrans %}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}From{% endtrans %}</th>
            <th>{% trans %}To{% endtrans %}</th>
            <th>{% trans %}Validated{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('event_show', { 'id': entity.id}) }}">{{ entity.name }}</a></td>
            <td>{% if entity.datefrom %}{{ entity.datefrom|date('Y-m-d') }}<small>{{ entity.datefrom|date('H:i:s') }}</small>{% endif %}</td>
            <td>{% if entity.dateto %}{{ entity.dateto|date('Y-m-d') }}<small>{{ entity.datefrom|date('H:i:s') }}</small>{% endif %}</td>
            <td>{{ entity.isvalidated }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.id}) }}">{% trans %}show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('event_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>

{% endblock %}

